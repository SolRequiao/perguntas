<%- include ('partials/header.ejs')%>
<body>
    <%- include ('partials/navbar.ejs')%>
    <div class="container" id="formulario-pergunta">
        <div class="card">
            <div class="card-header">
                <h3>Realizar pergunta</h3>
            </div>
            <div class="card-body">
                <form method="POST" action="/salvar-pergunta">
                    <div class="mb-3">
                        <label for="" class="form-label">Titulo</label>
                        <input type="text" class="form-control" name="titulo" placeholder="Digite o título da pergunta"
                            required>
                    </div>
                    <div class="mb-3">
                        <label for="" class="form-label">Descrição</label>
                        <textarea name="descricao" class="form-control" placeholder="Descreva sua pergunta aqui"
                            required></textarea>
                    </div>
                    <button type="submit" class="btn btn-success">Enviar Perguntar</button>
                    <a href="/" class="btn btn-secondary">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include ('partials/footer.ejs')%>
